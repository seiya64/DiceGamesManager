@section Scripts {
    @Scripts.Render("~/bundles/app")
}
<div class="row">
    <div class="col-sm-4" id="registerForm">
        <form>
            <h3>Register</h3>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" id="txtEmail" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" id="txtPassword1" />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" id="txtPassword2" />
            </div>
            <div class="alert alert-danger" id="errorMessage"></div>
            <div class="form-group">
                <a class="btn btn-default" id="btnRegister">Register</a>
            </div>
        </form>
    </div>
</div>